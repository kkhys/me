{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@kkhys/eslint-config",
  "private": true,
  "version": "0.1.0",
  "files": [
    "./base.js",
    "./nextjs.js",
    "./react.js",
    "./storybook.js"
  ],
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "lint": "eslint .",
    "format": "prettier --check \"**/*.{mjs,ts,md,json}\" --ignore-path ../../.gitignore",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@next/eslint-plugin-next": "14.2.21",
    "@typescript-eslint/eslint-plugin": "8.18.2",
    "@typescript-eslint/parser": "8.18.2",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-turbo": "2.3.3",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-react": "7.37.2",
    "eslint-plugin-react-hooks": "5.1.0"
  },
  "devDependencies": {
    "@types/eslint": "8.56.12",
    "@kkhys/prettier-config": "workspace:0.1.0",
    "@kkhys/tsconfig": "workspace:0.1.0",
    "eslint": "8.57.1",
    "eslint-plugin-storybook": "0.11.1",
    "typescript": "5.7.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "./base.js"
    ]
  },
  "prettier": "@kkhys/prettier-config"
}
