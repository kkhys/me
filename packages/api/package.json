{
  "name": "@kkhys/api",
  "private": "true",
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "dev:email": "email dev --dir src/emails --port 3002",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@kkhys/auth": "workspace:*",
    "@kkhys/db": "workspace:*",
    "@react-email/components": "0.0.19",
    "@react-email/render": "0.0.15",
    "@t3-oss/env-nextjs": "0.10.1",
    "@trpc/server": "11.0.0-rc.465",
    "date-fns": "3.6.0",
    "jose": "5.4.1",
    "react": "18.3.1",
    "react-email": "2.1.5",
    "resend": "3.3.0",
    "superjson": "2.2.1",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@kkhys/eslint-config": "workspace:*",
    "@kkhys/prettier-config": "workspace:*",
    "@kkhys/tsconfig": "workspace:*",
    "@kkhys/validators": "workspace:*",
    "@types/react": "18.3.3",
    "eslint": "8.57.0",
    "prettier": "3.3.3",
    "typescript": "5.5.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@kkhys/eslint-config/base",
      "@kkhys/eslint-config/react"
    ]
  },
  "prettier": "@kkhys/prettier-config"
}
