  "dependencies": {
    "@kkhys/auth": "workspace:*",
    "@kkhys/db": "workspace:*",
    "@trpc/server": "11.0.0-rc.342",
    "superjson": "2.2.1",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@kkhys/eslint-config": "workspace:*",
    "@kkhys/prettier-config": "workspace:*",
    "@kkhys/tsconfig": "workspace:*",
    "eslint": "8.57.0",
    "prettier": "3.2.5",
    "typescript": "5.4.5"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@kkhys/eslint-config/base"
    ]
  },
  "prettier": "@kkhys/prettier-config"
}
