{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@kkhys/email",
  "private": "true",
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "email dev --dir src --port 3002",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@kkhys/validators": "workspace:*",
    "@react-email/components": "0.0.28",
    "@react-email/render": "1.0.2",
    "react": "18.3.1",
    "react-email": "3.0.3",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@kkhys/eslint-config": "workspace:*",
    "@kkhys/prettier-config": "workspace:*",
    "@kkhys/tsconfig": "workspace:*",
    "@types/react": "18.3.12",
    "eslint": "8.57.1",
    "prettier": "3.4.1",
    "typescript": "5.7.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@kkhys/eslint-config/base",
      "@kkhys/eslint-config/react"
    ]
  },
  "prettier": "@kkhys/prettier-config"
}
