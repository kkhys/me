{
  "name": "@kkhys/db",
  "private": "true",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint .",
    "generate": "pnpm with-env drizzle-kit generate:mysql --config src/config.ts",
    "push": "pnpm with-env drizzle-kit push:mysql --config src/config.ts",
    "studio": "pnpm with-env drizzle-kit studio --config src/config.ts",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@planetscale/database": "1.16.0",
    "drizzle-orm": "0.30.6"
  },
  "devDependencies": {
    "@kkhys/eslint-config": "workspace:*",
    "@kkhys/prettier-config": "workspace:*",
    "@kkhys/tsconfig": "workspace:*",
    "dotenv-cli": "7.4.1",
    "drizzle-kit": "0.20.14",
    "eslint": "8.57.0",
    "mysql2": "3.9.3",
    "prettier": "3.2.5",
    "typescript": "5.4.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@kkhys/eslint-config/base"
    ]
  },
  "prettier": "@kkhys/prettier-config"
}
