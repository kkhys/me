---
import BuyMeACoffee from "#/components/ui/icons/buy-me-a-coffee.astro";
import { siteConfig } from "#/config/site";
import BentoItemIconCard from "./bento-item-icon-card.astro";
---

<BentoItemIconCard
  iconBgClass="bg-[var(--uchu-yellow-5)] border-[var(--uchu-yellow-6)]"
  title="Buy Me a Coffee"
  description="カフェイン補給にご協力を"
  href={siteConfig.support}
  target="_blank"
  rel="noreferrer"
  transition={0.40}
  umamiEvent="buy-me-coffee-click"
  umamiEventLocation="home-bento"
>
  <BuyMeACoffee slot="icon" class="size-6" />
</BentoItemIconCard>
