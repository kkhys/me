---
import Budoux from "#/components/budoux.astro";
import { TechBlogSlider } from "#/features/home/components/ui/bento/tech-blog/tech-blog-slider";
import BentoItemBase from "../bento-item-base.astro";
---

<BentoItemBase
  size="col-span-2 row-span-1 md:col-span-2 aspect-[2/1] md:aspect-square"
  href="/blog/categories/tech"
  transition={0.60}
  className="relative flex flex-col justify-between overflow-hidden"
>
  <div class="pt-4 px-4">
    <div class="my-2 text-sm font-semibold">
      技術ブログ
    </div>
    <Budoux>
      <div class="text-xs text-muted-foreground">
        日々の学びをまとめています
      </div>
    </Budoux>
  </div>
  <TechBlogSlider client:idle />
  <div class="absolute inset-0 bg-foreground/2 opacity-0 hover:opacity-100 transition-opacity z-10 active:bg-foreground/6" />
</BentoItemBase>
