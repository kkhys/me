---
import Github from "#/components/ui/icons/github.astro";
import GithubActivity from "#/features/home/components/ui/bento/github-activity/github-activity.astro";
import GithubActivityFallback from "#/features/home/components/ui/bento/github-activity/github-activity-fallback.astro";
import BentoItemBase from "../bento-item-base.astro";
---

<BentoItemBase
  size="col-span-2 row-span-2 md:row-span-1 md:col-span-4 aspect-square md:aspect-[2/1]!"
  transition={0.50}
  isClickable={false}
  className="p-4 flex justify-between flex-col md:flex-row h-full"
>
  <div>
    <div class="grid place-content-center size-10 shadow-sm rounded-[8px] bg-[#171515] border">
      <Github class="size-6" />
    </div>
    <div class="my-2 font-semibold">
      GitHub
    </div>
    <div class="text-xs text-muted-foreground">
      kkhys
    </div>
  </div>
  <GithubActivity server:defer>
    <GithubActivityFallback slot="fallback"  />
  </GithubActivity>
</BentoItemBase>
