---
import type { HTMLAttributes } from "astro/types";
import featuredBlog01 from "#/assets/images/featured-blog-01.jpg";
import featuredBlog02 from "#/assets/images/featured-blog-02.jpg";
import featuredBlog03 from "#/assets/images/featured-blog-03.jpg";
import featuredBlog04 from "#/assets/images/featured-blog-04.jpg";
import featuredBlog05 from "#/assets/images/featured-blog-05.jpg";
import BentoGrid from "#/features/home/components/ui/bento/bento-grid.astro";
import BentoItemFeatured from "#/features/home/components/ui/bento/bento-item-featured.astro";

interface Props extends HTMLAttributes<"div"> {}

const { class: className } = Astro.props;
---

<BentoGrid class={className}>
  <BentoItemFeatured
  href="/blog/posts/b1ty460"
  title="デスク構成スナップショット 2025"
  description="引越しを機に見直したデスク環境について。真に必要なものだけで構成した作業空間の設計原則と、厳選したアイテムを紹介する。無駄を削ぎ落とし本質だけを残した現代版茶室。"
  image={featuredBlog01}
  imageAlt="「デスク構成スナップショット 2025」の画像"
  size="col-span-2 row-span-2 md:col-span-4 aspect-square"
  variant="text-first"
  transition={0.1}
  />
  <BentoItemFeatured
  href="/blog/posts/b1r3zrr"
  title="Mac mini という選択"
  image={featuredBlog02}
  imageAlt="「Mac mini という選択」の画像"
  size="1x1"
  variant="image-overlay"
  transition={0.15}
  />
  <BentoItemFeatured
  href="/blog/posts/b1ppkfs"
  title="さよなら、My 自作 PC"
  image={featuredBlog03}
  imageAlt="「さよなら、My 自作 PC」の画像"
  size="1x1"
  variant="image-overlay"
  imageClass="object-right!"
  transition={0.2}
  />
  <BentoItemFeatured
  href="/blog/posts/b1zn5cl"
  title="景色と料理を楽しむ、鹿児島 3 泊 4 日の旅"
  image={featuredBlog04}
  imageAlt="「景色と料理を楽しむ、鹿児島 3 泊 4 日の旅」の画像"
  size="1x1"
  variant="image-overlay"
  imageClass="object-left!"
  transition={0.25}
  />
  <BentoItemFeatured
  href="/blog/posts/b17ruev"
  title="7 日間のマレーシア放浪記"
  image={featuredBlog05}
  imageAlt="「7 日間のマレーシア放浪記」の画像"
  size="col-span-1 row-span-1 md:col-span-4 aspect-[2/1]"
  variant="image-overlay"
  imageClass="object-top! aspect-square! md:aspect-[2/1]!"
  blurIntensity={6}
  blurHeight="40%"
  transition={0.3}
  />
</BentoGrid>
