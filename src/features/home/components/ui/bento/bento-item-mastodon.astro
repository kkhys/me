---
import Mastodon from "#/components/ui/icons/mastodon.astro";
import { me } from "#/config/site";
import BentoItemIconCard from "./bento-item-icon-card.astro";
---

<BentoItemIconCard
  iconBgClass="bg-gradient-to-b from-[#6364ff] to-[#563acc] border-[#5348cc]"
  title="Mastodon"
  description="日々のつぶやき"
  href={me.mastodon}
  target="_blank"
  rel="noreferrer me"
  transition={0.35}
  umamiEvent="mastodon-click"
  umamiEventLocation="home-bento"
>
  <Mastodon slot="icon" class="size-5 fill-white" />
</BentoItemIconCard>
