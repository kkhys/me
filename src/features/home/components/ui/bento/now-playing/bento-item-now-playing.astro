---
import NowPlaying from "#/features/home/components/ui/bento/now-playing/now-playing.astro";
import NowPlayingFallback from "#/features/home/components/ui/bento/now-playing/now-playing-fallback.astro";
import BentoItemBase from "../bento-item-base.astro";
---

<BentoItemBase
  size="col-span-2 row-span-1 md:col-span-4 aspect-[2/1]"
  transition={0.55}
  isClickable={false}
  className="flex justify-between gap-4 p-4 overflow-hidden"
>
  <NowPlaying server:defer>
  <NowPlayingFallback slot="fallback" />
  </NowPlaying>
</BentoItemBase>
