---
import Image from "#/components/ui/image/image.astro";

interface Props {
  src: ImageMetadata | string;
  alt: string;
  placeholder: string;
}

const { src, alt, ...props } = Astro.props;
---

{
  typeof src === "string" ? (
    <img src={src} alt={alt} {...props} />
  ) : (
    <Image src={src} alt={alt} ambientMode {...props} />
  )
}
