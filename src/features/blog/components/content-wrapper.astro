---
import type { AstroComponentFactory } from "astro/runtime/server/index.js";
import ImageHandler from "#/features/blog/components/image-handler.astro";
import LinkHandler from "#/features/blog/components/link-handler.astro";
import CheckBox from "#/features/blog/components/ui/blocks/checkbox.astro";
import Heading2 from "#/features/blog/components/ui/blocks/heading-2.astro";
import Heading3 from "#/features/blog/components/ui/blocks/heading-3.astro";
import MermaidBlock from "#/features/blog/components/ui/blocks/mermaid-block.astro";

interface Props {
  content: AstroComponentFactory;
}

const { content: Content } = Astro.props;
---


<Content components={{
    a: LinkHandler,
    img: ImageHandler,
    h2: Heading2,
    h3: Heading3,
    input: CheckBox,
    picture: MermaidBlock }}
/>
