---
import type { HTMLAttributes } from "astro/types";
import type { Tag } from "#/features/blog/config/tag";

interface Props extends HTMLAttributes<"div"> {
  tags: (Tag & {
    emojiSvg: string;
  })[];
}

const { tags, class: className, ...rest } = Astro.props;
---

<div class:list={["tag-cloud", className]} {...rest}>
  {tags.map(({ slug, label, emojiSvg }) => (
      <a
          href={`/blog/tags/${slug}`}
          class="tag"
      >
        <div
            set:html={emojiSvg}
            class="tag-emoji"
        />
        <p class="tag-label">{label}</p>
      </a>
  ))}
</div>

<style>
  .tag-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
  }

  .tag {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    font-size: var(--fs-sm);
    line-height: 1.25rem;
    font-weight: var(--fw-medium);
    background-color: oklch(from var(--c-surface) l c h / 50%);
    border-radius: 9999px;
    border: 1px solid var(--c-border);
    padding-block: 0.25rem;
    padding-inline: 0.25rem 0.625rem;
    text-decoration: none;
    color: inherit;
    transition:
      background-color 0.2s,
      transform 0.15s ease;
  }

  .tag:hover {
    background-color: var(--c-surface);
  }

  .tag:active {
    transform: scale(0.98);
  }

  .tag:focus {
    outline: none;
  }

  .tag-emoji {
    border-radius: 9999px;
    background-color: oklch(from var(--c-surface) l c h / 95%);
    padding: 0.125rem;
  }

  .tag-emoji :global(svg) {
    display: block;
    width: 1rem;
    height: 1rem;
  }

  .tag-label {
    white-space: nowrap;
    font-feature-settings: "palt";
  }
</style>
