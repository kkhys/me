---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"hr"> {}

const { class: className, ...rest } = Astro.props;
---

<hr class:list={["separator", className]} {...rest} />

<style>
  .separator {
    height: 1px;
    width: 100%;
    background: var(--c-hr);
    border: none;
  }
</style>
