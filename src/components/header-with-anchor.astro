---
import LinkIcon from "@lucide/astro/icons/link";

interface Props {
  id: string;
}

const { id } = Astro.props;

const level = "2";
const Tag = `h${level}`;
---

<Tag id={id} class="relative scroll-mt-12 budoux">
    <a href={`#${id}`} class="page-link group no-underline">
        <div class="absolute w-8 mt-[4px] -ml-8 hidden opacity-0 transition group-hover:opacity-100 group-focus:opacity-100 md:block">
            <div class="group/anchor flex items-center justify-center size-5 rounded-md bg-zinc-50 ring-1 ring-zinc-300 transition ring-inset hover:ring-zinc-500 dark:bg-zinc-800 dark:ring-zinc-700 dark:hover:bg-zinc-700 dark:hover:ring-zinc-600">
                <LinkIcon class="size-3 stroke-zinc-500 transition dark:stroke-zinc-400 dark:group-hover/anchor:stroke-white" />
            </div>
        </div>
        <slot />
    </a>
</Tag>
