---
import { siteConfig } from "#/config/site";

interface Props {
  title: string;
  description: string;
  image: string;
  imageAlt: string;
  type?: "website" | "article" | "profile" | undefined;
  article?:
    | {
        publishedTime?: string;
        modifiedTime?: string;
        authors?: string[];
        section?: string;
        tags?: string[];
      }
    | undefined;
}

const {
  title,
  description,
  image,
  imageAlt,
  type = "website",
  article,
} = Astro.props;

const resolvedDescription = description.slice(0, 200);
const ogUrl = new URL(Astro.url.pathname, Astro.site).href;
const secureUrl = image.startsWith("https://") ? image : undefined;
---

<meta property="og:type" content={type} />
<meta property="og:url" content={ogUrl} />
<meta property="og:title" content={title} />
<meta property="og:description" content={resolvedDescription} />
<meta property="og:image" content={image} />
{secureUrl && <meta property="og:image:secure_url" content={secureUrl} />}
<meta property="og:image:type" content="image/png" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:alt" content={imageAlt} />
<meta property="og:site_name" content={siteConfig.title} />
<meta property="og:locale" content="ja_JP" />
{type === "article" && article?.publishedTime && (
  <meta property="article:published_time" content={article.publishedTime} />
)}
{type === "article" && article?.modifiedTime && (
  <meta property="article:modified_time" content={article.modifiedTime} />
)}
{type === "article" && article?.authors?.map((author) => (
  <meta property="article:author" content={author} />
))}
{type === "article" && article?.section && (
  <meta property="article:section" content={article.section} />
)}
{type === "article" && article?.tags?.map((tag) => (
  <meta property="article:tag" content={tag} />
))}
