---
import type { AstroComponentFactory } from "astro/runtime/server/index.js";
import CheckBox from "#/pages/blog/_components/checkbox.astro";
import Heading2 from "#/pages/blog/_components/heading-2.astro";
import Heading3 from "#/pages/blog/_components/heading-3.astro";
import ImageHandler from "#/pages/blog/_components/image-handler.astro";
import LinkHandler from "#/pages/blog/_components/link-handler.astro";
import MermaidBlock from "#/pages/blog/_components/mermaid-block.astro";

interface Props {
  content: AstroComponentFactory;
}

const { content: Content } = Astro.props;
---


<Content components={{
    a: LinkHandler,
    img: ImageHandler,
    h2: Heading2,
    h3: Heading3,
    input: CheckBox,
    picture: MermaidBlock }}
/>
