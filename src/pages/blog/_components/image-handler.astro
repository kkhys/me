---
import MarkdownImage from "#/components/image/markdown-image.astro";

interface Props {
  src: ImageMetadata | string;
  alt: string;
  placeholder: string;
}

const { src, alt, ...props } = Astro.props;
---

{
    typeof src === "string" ? (
      <img src={src} alt={alt} {...props} />
    ) : (
      <MarkdownImage src={src} alt={alt} canZoom {...props} />
    )
}
