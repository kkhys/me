---
import type { HTMLAttributes } from "astro/types";
import LinkCard from "#/pages/blog/_components/link-card.astro";

interface Props extends HTMLAttributes<"a"> {
  href: string;
  "data-link-card"?: string;
}

const props = Astro.props;
---

{
    Object.hasOwn(props, "data-link-card") ? (
    <LinkCard {...props} />
        ) : (
    <a {...props}>
        <slot />
    </a>
        )
    }
