---
import Budoux from "#/components/budoux.astro";
import BentoGrid from "#/features/home/components/ui/bento/bento-grid.astro";
import BentoItemAboutMe from "#/features/home/components/ui/bento/bento-item-about-me.astro";
import BentoItemMap from "#/features/home/components/ui/bento/bento-item-map.astro";
import BentoItemMastodon from "#/features/home/components/ui/bento/bento-item-mastodon.astro";
import BentoItemSupport from "#/features/home/components/ui/bento/bento-item-support.astro";
import BentoItemGithubActivity from "#/features/home/components/ui/bento/github-activity/bento-item-github-activity.astro";
import BentoItemNowPlaying from "#/features/home/components/ui/bento/now-playing/bento-item-now-playing.astro";
import BentoItemTechBlog from "#/features/home/components/ui/bento/tech-blog/bento-item-tech-blog.astro";
import BaseLayout from "#/layouts/base-layout.astro";
import { getCustomTransition } from "#/lib/custom-transition";
import { cn } from "#/lib/ui";
---

<BaseLayout pagefind>
    <h1 class="font-medium" transition:animate={getCustomTransition()}>
        Keisuke Hayashi
    </h1>
    <Budoux>
        <p class="text-sm text-muted-foreground mt-2" transition:animate={getCustomTransition(0.15)}>東京を拠点とするフルスタック開発者。何かを作り、人々に喜びと驚きを与えることが大好きです。</p>
    </Budoux>
        <BentoGrid class="mt-10">
            <BentoItemAboutMe />
            <BentoItemMastodon />
            <BentoItemSupport />
            <BentoItemMap />
            <BentoItemGithubActivity />
            <BentoItemNowPlaying />
            <BentoItemTechBlog />
        </BentoGrid>
    <div class="mt-10">
        <h2 class="font-medium" transition:animate={getCustomTransition()}>
            ブログ
        </h2>
        <BentoGrid class="mt-10">
            <div
                    class={cn(
                        "group/bento size-full shadow-input flex flex-col justify-between shadow-sm space-y-4 rounded-xl border bg-background p-4 transition duration-200 active:scale-95 dark:shadow-none",
                        "col-span-1 row-span-1 md:col-span-2 aspect-square"
                    )}
            >
                header
                <div class="transition duration-200 group-hover/bento:translate-x-0">
                    icon
                    <div class="my-2 font-semibold">
                        title
                    </div>
                    <div class="text-xs text-muted-foreground">
                        description
                    </div>
                </div>
            </div>
        </BentoGrid>
    </div>
</BaseLayout>
