{
  "$schema": "https://json.schemastore.org/package.json",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "dev:search": "astro build && pagefind --site dist/client && rm -rf public/pagefind && cp -r dist/client/pagefind public/ && astro dev",
