{
  "$schema": "https://json.schemastore.org/package.json",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "check": "astro check && tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "playwright-install": "pnpm dlx playwright-core install chromium",
    "render:mermaid": "bun run scripts/render-mermaid.ts",
    "release": "bun run scripts/release.ts",
    "create:entry": "bun run scripts/create-entry.ts",
    "deploy": "vercel build --prod && vercel deploy --prebuilt --prod"
  },
  "dependencies": {
    "@astrojs/check": "0.9.6",
    "@astrojs/mdx": "4.3.13",
