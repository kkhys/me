    "@astrojs/rss": "4.0.15",
    "@astrojs/sitemap": "3.7.0",
    "@justinribeiro/lite-youtube": "1.9.0",
    "astro": "5.17.1",
    "astro-expressive-code": "0.41.6",
    "graphql-request": "7.4.0",
    "kiso.css": "1.2.4",
    "react-tweet": "3.3.0",
    "sharp": "0.34.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@expressive-code/plugin-line-numbers": "0.41.6",
    "@types/bun": "1.3.9",
    "@types/hast": "3.0.4",
