{
  "name": "@kkhsy/admin",
  "private": true,
  "scripts": {
    "build": "pnpm with-env next build",
    "clean": "git clean -xdf .next .turbo node_modules storybook-static",
    "dev": "pnpm with-env next dev --port 3001",
    "lint": "dotenv -v SKIP_ENV_VALIDATION=1 next lint",
    "format": "prettier --check \"**/*.{js,cjs,mjs,ts,tsx,md,json}\" --ignore-path ../../.gitignore",
    "start": "pnpm with-env next start --port 3001",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --",
    "storybook:dev": "storybook dev --port 6008 --quiet --no-open",
    "storybook:build": "storybook build --quiet",
    "storybook:move": "mv storybook-static ../../storybook-static/admin"
  },
  "dependencies": {
    "@t3-oss/env-nextjs": "0.7.1",
    "next": "14.0.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@kkhys/eslint-config": "0.1.0",
    "@kkhys/prettier-config": "0.1.0",
    "@kkhys/tailwind-config": "0.1.0",
    "@kkhys/tsconfig": "0.1.0",
    "@storybook/addon-essentials": "7.6.4",
    "@storybook/addon-interactions": "7.6.4",
    "@storybook/addon-links": "7.6.4",
    "@storybook/addon-onboarding": "1.0.9",
    "@storybook/blocks": "7.6.4",
    "@storybook/nextjs": "7.6.4",
    "@storybook/react": "7.6.4",
    "@storybook/testing-library": "0.2.2",
    "@types/node": "20.10.4",
    "@types/react": "18.2.42",
    "@types/react-dom": "18.2.17",
    "daisyui": "4.4.19",
    "dotenv-cli": "7.3.0",
    "eslint": "8.55.0",
    "prettier": "3.1.0",
    "storybook": "7.6.4",
    "tailwindcss": "3.3.6",
    "typescript": "5.3.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@kkhys/eslint-config/base",
      "@kkhys/eslint-config/nextjs",
      "@kkhys/eslint-config/react",
      "@kkhys/eslint-config/storybook"
    ]
  },
  "prettier": "@kkhys/prettier-config"
}
