{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@kkhys/web",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "git clean -xdf .cache .contentlayer .next .turbo node_modules storybook-static",
    "dev": "bun with-env next dev --port 3000",
    "_prebuild": "bun contentlayer2 build && bun ./src/scripts/pre-build.ts && cd ../.. && bun lint:fix && cd apps/web",
    "build": "bun with-env next build",
    "start": "bun with-env next start --port 3000",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --",
    "storybook:dev": "bun with-env storybook dev --port 6008 --quiet --no-open",
    "storybook:build": "bun with-env storybook build --quiet",
    "storybook:move": "mv storybook-static ../../storybook-static/web",
    "playwright-install": "bunx playwright-core install chromium"
  },
  "dependencies": {
    "@clerk/nextjs": "6.11.2",
