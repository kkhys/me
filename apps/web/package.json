{
  "name": "@kkhys/web",
  "private": true,
  "scripts": {
    "build": "pnpm with-env next build",
    "clean": "git clean -xdf .next .turbo node_modules storybook-static .contentlayer",
    "dev": "pnpm with-env next dev --port 3000",
    "lint": "dotenv -v SKIP_ENV_VALIDATION=1 next lint",
    "format": "prettier --check \"**/*.{js,cjs,mjs,ts,tsx,md,json}\" --ignore-path ../../.gitignore",
    "start": "pnpm with-env next start --port 3000",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --",
    "storybook:dev": "storybook dev --port 6007 --quiet --no-open",
    "storybook:build": "storybook build --quiet",
    "storybook:move": "mv storybook-static ../../storybook-static/web"
  },
  "dependencies": {
    "@radix-ui/react-icons": "1.3.0",
    "@radix-ui/react-slot": "1.0.2",
    "@t3-oss/env-nextjs": "0.7.1",
    "bs58": "5.0.0",
    "class-variance-authority": "0.7.0",
    "clsx": "2.0.0",
    "contentlayer": "0.3.4",
    "date-fns": "2.30.0",
    "next": "13.5.6",
    "next-contentlayer": "0.3.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "1.14.0",
    "tailwindcss-animate": "1.0.7",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@kkhys/eslint-config": "0.1.0",
    "@kkhys/prettier-config": "0.1.0",
    "@kkhys/tailwind-config": "0.1.0",
    "@kkhys/tsconfig": "0.1.0",
    "@storybook/addon-essentials": "7.5.1",
    "@storybook/addon-interactions": "7.5.1",
    "@storybook/addon-links": "7.5.1",
    "@storybook/addon-onboarding": "1.0.8",
    "@storybook/blocks": "7.5.1",
    "@storybook/nextjs": "7.5.1",
    "@storybook/react": "7.5.1",
    "@storybook/testing-library": "0.2.2",
    "@types/bs58": "4.0.3",
    "@types/node": "20.8.7",
    "@types/react": "18.2.31",
    "@types/react-dom": "18.2.14",
    "dotenv-cli": "7.3.0",
    "eslint": "8.52.0",
    "prettier": "3.0.3",
    "storybook": "7.5.1",
    "tailwindcss": "3.3.4",
    "typescript": "5.2.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@kkhys/eslint-config/base",
      "@kkhys/eslint-config/nextjs",
      "@kkhys/eslint-config/react",
      "@kkhys/eslint-config/storybook"
    ]
  },
  "prettier": "@kkhys/prettier-config"
}
